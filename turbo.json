{
  "$schema": "https://turbo.build/schema.json",
  "globalDependencies": [".env"],
  "tasks": {
    "build": {
      "dependsOn": ["^build"],
      "env": ["NODE_ENV", "VITE_"],
      "outputs": [
        "build/**",
        "dist/**",
        "out/**",
        "**/generated/**"
      ]
    },
    "predev": {
      "outputs": [
        "**/generated/**"
      ]
    },
    "dev": {
      "dependsOn": ["^predev", "predev"],
      "cache": false,
      "persistent": true
    },
    "test": {
      "dependsOn": ["^build"],
      "outputs": ["coverage/**"]
    },
    "lint": {
      "dependsOn": ["^build"],
      "outputs": []
    }
  }
}
